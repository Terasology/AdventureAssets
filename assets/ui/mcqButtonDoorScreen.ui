{
  "type": "McqButtonDoorScreen",
  "skin": "engine:default",
  "contents": {
    "type": "RelativeLayout",
    "contents": [
      {
        "type": "ScrollableArea",
        "id": "scrollArea",
        "content": {
          "type": "ColumnLayout",
          "columns": 1,
          "verticalSpacing": 8,
          "contents": [
            {
              "type": "UILabel",
              "family": "subheading",
              "id": "title",
              "text": "Title"
            },
            {
              "type": "UILabel",
              "id": "message",
              "text": "Message to display"
            },
            {
              "type": "RowLayout",
              "id": "buttonLayout"
            }
          ]
        },
        "layoutInfo": {
          "width": 500,
          "height": 200,
          "position-horizontal-center": {},
          "position-vertical-center": {}
        }
      },
      {
        "type": "nui:rowLayout",
        "id": "actionsRow",
        "contents": [
          {
            "type": "UIButton",
            "text": "Go back",
            "id": "back"
          }
        ],
        "layoutInfo": {
          "height": 32,
          "width": 500,
          "position-horizontal-center": {},
          "position-top": {
            "widget": "scrollArea",
            "target": "BOTTOM"
          }
        }
      }
    ]
  }
}